{
    "rules": [
        {
            "context": ".cursor/rules/next-app-router.md",
            "pattern": "app/**/*.tsx"
        },
        {
            "description": "Next.js page component that defines a route in the App Router",
            "pattern": "app/**/page.tsx"
        },
        {
            "description": "Next.js layout component that wraps pages and other layouts",
            "pattern": "app/**/layout.tsx"
        },
        {
            "description": "React client component with 'use client' directive for client-side interactivity",
            "pattern": "app/**/*Client.tsx"
        },
        {
            "context": ".cursor/rules/server-actions.md",
            "pattern": "app/**/actions.ts"
        },
        {
            "context": ".cursor/rules/services.md",
            "pattern": "tt-services/src/services/*.ts"
        },
        {
            "description": "External service connectors (e.g., Google API, MongoDB)",
            "pattern": "tt-services/src/connections/*.ts"
        },
        {
            "context": ".cursor/rules/ui-components.md",
            "pattern": "app/components/*.tsx"
        },
        {
            "description": "Next.js API routes using the Route Handlers API",
            "pattern": "app/api/**/*.ts"
        },
        {
            "description": "Server actions for Google Docs integration, replacing older API routes",
            "pattern": "app/google/docs/actions.ts"
        }
    ],
    "version": 1
}